= simple_form_for @match, :html => { :class => 'form-horizontal' } do |f|
  = f.input :match_date
  = f.input :team_id, collection: Team.all
  = f.input :team_vs_id, collection: Team.all
  
  .form-actions
    = f.button :submit, class: 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), teams_path, :class => 'btn'
